#include <vector>
#include <algorithm>
#include <iostream>
using namespace std;

static vector<vector<int> > trans;
static int n;
bool solve(int r, int b, int mv) {
	cout << "Currently solving pair positions, r: " << r << " b: " << b
			<< " and move" << mv << endl;
	if (r == n and b == n) {
		cout << "Same number of moves " << mv << endl;
		return (mv ^ 1);
	} else if (r == n) {
		cout << " Red reaches" << endl;
		return false;
	} else if (b == n) {
		cout << "Black reaches" << endl;
		return true;
	} else if (mv == 0) {
		cout << "Optimal Round, choose from: ";
		for (int i = 0; i < trans[r].size(); i++) cout << trans[r][i];
		for (int i = 0; i < trans[b].size(); i++) cout << trans[b][i];
		return solve(trans[r].back(), trans[b].back(), mv ^ 1);
	} else
		cout << "Passive Round, choose from: ";
		for (int i = 0; i < trans[r].size(); i++) cout << trans[r][i];
		for (int i = 0; i < trans[b].size(); i++) cout << trans[b][i];
		return solve(trans[r].front(), trans[b].front(), mv ^ 1);
}

void do_case() {
	int m;
	cin >> n >> m;
	int r_start, b_start;
	cin >> r_start >> b_start;
	trans.clear();
	trans.resize(n + 1);
	while (m--) {
		int u, v;
		cin >> u >> v;
		trans[u].push_back(v);
	}
	for (int i = 0; i < n + 1; i++)
		sort(trans[i].begin(), trans[i].end());
	cout << solve(r_start, b_start, 0) << "\n";
}

int main() {
	int t;
	cin >> t;
	while (t--) {
		do_case();
	}
	return 0;
}
