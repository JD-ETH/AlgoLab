#include <vector>
#include <algorithm>
#include <iostream>
using namespace std;

static vector<vector <int> > trans;
static int n;
bool solve(int r, int b, int mv){
	if (r == n and b == n) {return mv;}
	else if (r ==n) {return false;}
	else if (b == n) {return true;}
	else
		if (mv == 0) {
			return solve(trans[r].back(),trans[b].back(),mv^1);
		}
		else
			return solve(trans[r].front(),trans[b].front(),mv^1);
}

void do_case(){
	int m;
	cin >> n >> m;
	int r_start,b_start;
	cin >> r_start,b_start;
	trans.clear();
	trans.resize(n+1);
	while (m--){
		int u,v;
		cin >> u >> v;
		trans[u].push_back(v);
	}
	for (int i = 0; i < n+1; i ++) sort(trans[i].begin(),trans[i].end());
	cout << solve(r_start,b_start,0) << "\n";
}

int main() {
	int t;
	cin >> t;
	while(t--){
		do_case();
	}
	return 0;
}
