#include <vector>
#include <algorithm>
#include <iostream>
using namespace std;

static vector<vector<int> > trans;
static int n;
int solve(int p, int opt) {

}

void do_case() {
	int m;
	cin >> n >> m;
	int r_start, b_start;
	cin >> r_start >> b_start;
	trans.clear();
	trans.resize(n + 1);
	while (m--) {
		int u, v;
		cin >> u >> v;
		trans[u].push_back(v);
	}
	for (int i = 0; i < n + 1; i++)
		sort(trans[i].begin(), trans[i].end());
	int min_Hol = solve(r_start,0);
	int min_Mar = solve(b_start,0);
	if (min_Hol == min_Mar) cout << (min_Hol % 2)<<endl;
	else cout << (min_Hol > min_Mar) << endl;
}

int main() {
	int t;
	cin >> t;
	while (t--) {
		do_case();
	}
	return 0;
}
