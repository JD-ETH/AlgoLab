#include <iostream>
#include <vector>
using namespace std;

int main() {
	int t;
	cin >> t;
	while(t--){
		int n;
		cin >> n;
		vector<int> t(2^n-1);
		for (int i = 0; i < 2^n-1; ++i){
			cin >> t[i];
		}


	}
	return 0;
}
