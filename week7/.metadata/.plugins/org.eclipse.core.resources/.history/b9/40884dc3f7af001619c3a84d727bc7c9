#include <iostream>
#include <cassert>
#include <CGAL/basic.h>
#include <CGAL/QP_models.h>
#include <CGAL/QP_functions.h>
#include <CGAL/Gmpz.h>

using namespace std;
using namespace CGAL;

typedef Gmpz ET;
typedef Quadratic_program<int> Program;
typedef Quadratic_program_solution<ET> Solution;

void do_case1(int & a, int& b){
	Program qp(SMALLER,true,0,false,0);
	// constraints
	const int X=0;
	const int Y=0;
	qp.set_a(X,0,1);
	qp.set_a(Y,0,1);
	qp.set_b(0,4);
	qp.set_a(X,1,4);
	qp.set_a(Y,1,2);
	qp.set_b(1,a*b);
	qp.set_a(X,2,-1);
	qp.set_a(Y,2,1);
	qp.set_b(1,1);

	// Objective
	qp.set_d(X,X,a);
	qp.set_d(Y,X,0);
	qp.set_d(Y,Y,-b);




}
int main() {
	int p ;
	while (cin >> p && p != 0){
		int p,a,b;
		cin >> p >> a >> b;
		if (p == 1){
			do_case1(a,b);
		}
		else do_case2(a,b);
	}
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
